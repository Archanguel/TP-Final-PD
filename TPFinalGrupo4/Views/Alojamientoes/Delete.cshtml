@model TPFinalGrupo4.Models.Alojamiento

@{
    ViewData["Title"] = "Delete";
}
@inject LanguageService language

<h1 class="text-center">@language.Getkey("Borrar Alojamiento")</h1>

<h3 class="text-center">@language.Getkey("¿Está seguro de querer borrar este alojamiento?")</h3><!--Are you sure you want to delete this?-->
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ciudad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ciudad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Barrio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Barrio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estrellas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estrellas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CantidadDePersonas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CantidadDePersonas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioPorPersona)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecioPorPersona)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioPorDia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecioPorDia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Habitaciones)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Habitaciones)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Banios)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Banios)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@language.Getkey("Borrar")" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">@language.Getkey("Volver")</a>
    </form>
</div>
