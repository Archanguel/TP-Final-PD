@model IEnumerable<TPFinalGrupo4.Models.Alojamiento>

@{
    ViewData["Title"] = "Index";
}
@inject LanguageService language

<h1 class=" display-4 text-center">@language.Getkey("Alojamientos")</h1>

<form asp-controller="Alojamientoes" asp-action="Index" method="get">
    <div class="row pt-4">
        <div class="col-12">
            <h1 class="text-center display-4">@language.Getkey("Buscador")</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            @language.Getkey("Ciudad")<input class="form-control" list="browsersa" name="searchCiudad" id="searchCiudad" />
            <datalist id="browsersa">
                <option value="Neuquen"></option>
                <option value="Buenos Aires"></option>
                <option value="Carlos Paz"></option>
            </datalist>

        </div>
        <div class="col-4">
            @language.Getkey("Tipo")<input class="form-control" list="browserse" name="searchTipo" />
            <datalist id="browserse">
                <option value="hotel"></option>
                <option value="cabaña"></option>
            </datalist>
        </div>
        <div class="col-2 align-self-end">
            <input type="submit" value="@language.Getkey("Buscar")" class="btn btn-success px-4" />
        </div>
    </div>

</form>
<div class="row my-3">
    <div class="col">
        <a asp-action="Create" class="btn btn-success btn-xs px-3">@language.Getkey("Agregar")</a>
    </div>
</div>

<table class="table table-bordered table-responsive-lg table-striped table-sm mb-4">
    <thead>
        <tr class="text-center">
            <th>@Html.DisplayNameFor(model => model.Codigo)</th>
            <th>@Html.DisplayNameFor(model => model.Ciudad)</th>
            <th>@Html.DisplayNameFor(model => model.Barrio)</th>
            <th>@Html.DisplayNameFor(model => model.Estrellas)</th>
            <th>@Html.DisplayNameFor(model => model.CantidadDePersonas)</th>
            <th>@Html.DisplayNameFor(model => model.Tv)</th>
            <th>@Html.DisplayNameFor(model => model.Tipo)</th>
            <th>@Html.DisplayNameFor(model => model.PrecioPorPersona)</th>
            <th>@Html.DisplayNameFor(model => model.PrecioPorDia)</th>
            <th>@Html.DisplayNameFor(model => model.Habitaciones)</th>
            <th>@Html.DisplayNameFor(model => model.Banios)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Ciudad)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Barrio)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Estrellas)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.CantidadDePersonas)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Tv)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.PrecioPorPersona)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.PrecioPorDia)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Habitaciones)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Banios)
                </td>
                <td class="d-flex justify-content-around align-content-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-xs mr-1">@language.Getkey("Editar")</a>
                    <!--<a asp-action="Details" asp-route-id="@item.Id">Details</a> |-->
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs ml-1">@language.Getkey("Borrar")</a>
                </td>
            </tr>
        }
    </tbody>
</table>
