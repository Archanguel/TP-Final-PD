@model TPFinalGrupo4.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}
@inject LanguageService language

<div class="row text-center justify-content-center align-items-center pb-3">
    <div class="col-12">
        <h1>@language.Getkey("Borrar Reserva")</h1>
    </div>
    <div class="text-center col-12 justify-content-center align-items-center">
        <h3>@language.Getkey("¿Está seguro de querer borrar esta reserva?")</h3>
    </div>
</div>


<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @language.Getkey("Fecha Desde")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaDesde)
        </dd>
        <dt class="col-sm-2">
            @language.Getkey("Fecha Hasta")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaHasta)
        </dd>
        <dt class="col-sm-2">
            @language.Getkey("Precio")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
    </dl>

    <form asp-action="Delete" id="formulario-reserva-delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@language.Getkey("Borrar")" class="btn btn-danger" /> |
        <a asp-action="Index">@language.Getkey("Volver")</a>
    </form>
</div>