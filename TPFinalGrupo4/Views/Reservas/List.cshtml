@model IEnumerable<TPFinalGrupo4.Models.Reserva>

@{
    ViewData["Title"] = "List";
}
@inject LanguageService language
@if (ViewData["message"] != null)
{
    <!-- Mensaje al usuario -->
    <div class="alert alert-danger" role="alert" id="alert-message-permisos">
        <strong>@ViewData["message"]</strong>
    </div>
    <script type="text/javascript">
        setTimeout(() => {
            document.getElementById("alert-message-permisos").remove()
        }, 4000)
    </script>
}
<div class="row pt-4">
    <div class="col-12">
        <h1 class="text-center display-4">@language.Getkey("Mis Reservaciones")</h1>
    </div>
</div>

<hr class="my-3" />

<div class="row row-cols-1 row-cols-md-2 ">
    @foreach (var item in Model)
    {
        <div class="col-4 mb-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-capitalize">
                        @Html.DisplayFor(modelItem => item.Alojamiento.Tipo)
                    </h5>
                    <p class="card-text text-capitalize mb-2 pb-0">
                        @language.Getkey("Fecha Desde"): @item.FechaDesde
                    </p>
                    <p class="card-text text-capitalize mb-2 pb-0">
                        @language.Getkey("Fecha Hasta"): @item.FechaHasta
                    </p>
                    <p class="card-text text-capitalize mb-2 pb-0">
                        @language.Getkey("Precio"): $ @item.Precio
                    </p>
                    <div class="row justify-content-end">
                        <a asp-route-id="@item.Id"
                           asp-controller="Reservas"
                           asp-action="Details"
                           class="btn btn-success px-4 mr-3">
                            <i class="fas fa-search"></i>
                            @language.Getkey("Ver")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>