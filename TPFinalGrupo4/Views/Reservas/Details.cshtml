@model TPFinalGrupo4.Models.Reserva

@{
    ViewData["Title"] = "Details";
}
@inject LanguageService language

<div class="row pt-4">
    <div class="col-12">
        <h1 class="text-center display-4">@language.Getkey("Detalles")</h1>
    </div>
</div>

<hr />

<div class="container">
    <div class="row pt-3">
        <h4>Reserva</h4>
        <div class="container">
            <dl class="row">
                <dt class="col-sm-4">
                    @language.Getkey("Tipo")
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Alojamiento.Tipo)
                </dd>
                <dt class="col-sm-4">
                    @language.Getkey("Nombre")
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Usuario.Nombre)
                </dd>
                <dt class="col-sm-4">
                    @language.Getkey("Dni")
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Usuario.Dni)
                </dd>
                <dt class="col-sm-4">
                    @language.Getkey("Fecha Desde")
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.FechaDesde)
                </dd>
                <dt class="col-sm-4">
                    @language.Getkey("Fecha Hasta")
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.FechaHasta)
                </dd>
                <dt class="col-sm-4">
                    @language.Getkey("Precio")
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Precio)
                </dd>
            </dl>
        </div>
    </div>
</div>
@if (User.IsInRole("Admin"))
{
    <div>
        <a asp-action="Delete" asp-route-id="@Model.Id">@language.Getkey("Borrar")</a> |
        <a asp-action="Index" class="btn btn-outline-secondary">@language.Getkey("Volver")</a>
    </div>
}
else
{
    <form asp-action="Delete" id="formulario-reserva-delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger px-4 mr-2" />
        <button asp-action="List" class="btn btn-outline-secondary">@language.Getkey("Volver")</button>
    </form>
}

