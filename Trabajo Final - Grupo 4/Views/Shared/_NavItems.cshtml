@inject LanguageService language

<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
    <ul class="navbar-nav flex-grow-1 justify-content-center">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        @if (User.IsInRole(true.ToString()))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">@language.Getkey("Usuarios")</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Alojamientoes" asp-action="Index">@language.Getkey("Alojamientos")</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Reservas" asp-action="Index">@language.Getkey("Reservaciones")</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Alojamientoes" asp-action="all">@language.Getkey("Alojamientos")</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Alojamientoes" asp-action="Buscador">@language.Getkey("Buscador")</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Reservas" asp-action="MODIFICAR ESTO">@language.Getkey("Mis Reservaciones")</a>
            </li>
            /* Acá tengo que crear una vista para ver las reservaciones de este usuario y poder cancelarlas */

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="CambiarContrasena">@language.Getkey("Cambiar Contraseña")</a>
            </li>
        }

    </ul>
</div>