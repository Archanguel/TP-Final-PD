@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
</head>

<body>
    <div class="box">
        <img src="~/imgs/avatar-user.png" class="avatar">
        <h1>Login</h1>
        <form action="Home" method="post" class="from-horizontal">
            <div class="form-group">

                <input type="user" class="form-control" id="user" name="user" placeholder="Usuario">
                <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña">

                <button type="submit" class="btn btn-primary btn-xs" name="login">Entrar</button>
            </div>
        </form>
    </div>
</body>

</html>
