@model Trabajo_Final___Grupo_4.Models.Usuario

@{
    ViewData["Title"] = "CambiarContrasena";
}

<h1 class="text-center">Cambiar Contraseña</h1>

<hr />

<div class="row">
    <div class="col-12">
        <form asp-action="CambiarContrasena">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group row">
                <div class="form-group col-4">
                    <label asp-for="Dni" class="control-label"></label>
                    <input asp-for="Dni" class="form-control" disabled />
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" disabled />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Password" class="control-label">Repeat Password</label>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-2 align-self-center d-none">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsAdmin" />
                    </label>
                </div>
                <div class="form-group col-2 align-self-center d-none">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Bloqueado" />
                    </label>
                </div>
                <div class="form-group col-4 d-none">
                    <label asp-for="Intentos" class="control-label"></label>
                    <input asp-for="Intentos" class="form-control" />
                    <span asp-validation-for="Intentos" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    <!--<a asp-action="Index" class="btn btn-primary">Volver</a>-->
                </div>
            </div>
        </form>
    </div>
</div>

